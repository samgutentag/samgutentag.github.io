###############################################################################
##  Terminal Navigation
###############################################################################
alias u="cd .."
alias uu="cd ../.."
alias uuu="cd ../../.."
alias uuu="cd ../../../.."
alias uuuu="cd ../../../../.."
alias uuuuu="cd ../../../../../.."

alias ltr="ls -lthr"
alias al="ls -al"
alias la="ls -al"

alias tree="find . -print | sed -e 's;[^/]*/;|____;g;s;____|; |;g'"


